<section class="registration">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="block text-center">
          <a class="logo" href="index.html">
            <img src="images/logo.png" alt="">
          </a>
          <h2 class="text-center">Dashboard administrateur</h2>

          <h3 class="text-center">Créer un nouvel item</h3>
          <br>
          <div class="text-left clearfix">
            <%= form_for @item, url: admin_dashboard_create_product_path do |f| %>
              <div class="form-group">
                <%= f.label :title %>
                <%= f.text_field :title, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :description %>
                <%= f.text_area :description, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :price %>
                <%= f.text_field :price, class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.label :image_url %>
                <%= f.text_field :image_url, class: 'form-control' %>
              </div>

              <%= f.submit 'Créer l\'item', class: 'btn btn-main' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>