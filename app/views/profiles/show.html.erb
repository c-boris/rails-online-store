<section class="registration">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="block text-center">
          <a class="logo" href="index.html">
            <img src="images/logo.png" alt="">
          </a>
          <h2 class="text-center">Profile of <%= @user.first_name %></h2>

          <h3 class="text-center">Basic Information</h3>
          <div class="text-left clearfix">
            <p><strong>First Name:</strong> <%= @user.first_name %></p>
            <p><strong>Last Name:</strong> <%= @user.last_name %></p>
            <p><strong>Email:</strong> <%= @user.email %></p>
          </div>

          <h3 class="text-center">Order History</h3>
          <div class="text-left clearfix">
            <p><strong>Past Orders:</strong></p>
            <br>
            <% @user.orders.each do |order| %>
              <p><strong><%= link_to 'Order details :', order_path(order.id)%></strong></p>
              <p><strong>Date:</strong> <%= order.created_at.to_date %></p>
              <ul>
                <% order.order_items.each do |order_item| %>
                  <li><%= order_item.item.title %> - Quantity: <%= order_item.quantity %></li>
                <% end %>
              </ul>
              <p><strong>Total:</strong> <%= order.order_total %> â‚¬</p>
              <br>
            <% end %>
          </div>

          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-main text-center' %>
        </div>
      </div>
    </div>
  </div>
</section>
