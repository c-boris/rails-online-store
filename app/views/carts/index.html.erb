<div class="page-wrapper">
  <div class="cart shopping">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2">
          <div class="block">
            <div class="product-list">
              <form method="post">
                <table class="table">
                  <thead>
                    <tr>
                      <th class="">Item Name</th>
                      <th class="">Update Quantity</th>
                      <th class="">Item Quantity</th>
                      <th class="">Item Price</th>
                      <th class="">Remove Item</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if current_user.cart.present? %>
                      <% if current_user.cart.cart_items.empty? %>
                        <tr>
                          <td colspan="4">Cart Empty</td>
                        </tr>
                      <% else %>
                        <% current_user.cart.cart_items.each do |cart_item| %>
                          <tr class="">
                            <td class="product-column">
                              <div class="product-info">
                                <img width="80" src="<%= cart_item.item.image_url %>" alt="image de chat" />
                                <%= link_to cart_item.item.title, item_path(cart_item.item.id) %>
                              </div>
                            </td>                            
                            <td class="">
                              <%= form_tag(cart_item_path(cart_item), method: :patch, class: "update-quantity") do %>
                                <%= number_field_tag :quantity, cart_item.quantity, min: 1, class: "quantity-field" %>
                                <%= submit_tag "Update", class: "update-button" %>
                              <% end %>
                            </td>
                            <td class=""><%= cart_item.quantity %></td>
                            <td class=""><%= cart_item.item.price * cart_item.quantity %> €</td>
                            <td class="">
                              <%= button_to "Delete", cart_item_path(cart_item.id), method: :delete, class: "product-remove" %>
                            </td>
                          </tr>
                        <% end %>
                      <% end %>
                      <tr>
                        <td colspan="2"></td>
                        <td class="cart-total">Cart Total:</td>
                        <td class="cart-total-amount" colspan="4"><%= current_user.cart.cart_items.sum { |cart_item| cart_item.item.price * cart_item.quantity } %> €</td>
                      </tr>
                      <tr>
                        <td colspan="6" class="text-center">
                          <%= button_to "Order", checkout_create_path(total: @total), class: "btn btn-primary", data: {turbo: false} %>
                        </td>
                      </tr>
                    <% else %>
                      <tr>
                        <td colspan="5">Cart Empty</td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
